---
/**
 * Header.astro
 *
 * Global header with:
 * - Mobile (<640px): hamburger menu (left) + ToC toggle (right)
 * - Tablet (640-1024px): sidebar toggle (left) + ToC toggle (right)
 * - Desktop (>1024px): sidebar toggle (left) + logo (center)
 */

// Import SVGs as Astro components
import DesktopLogoLight from '../../public/images/rotulo-header-desktop-light.svg';
import DesktopLogoDark from '../../public/images/rotulo-header-desktop-dark.svg';
import MobileLogoLight from '../../public/images/rotulo-header-mobile-light.svg';
import MobileLogoDark from '../../public/images/rotulo-header-mobile-dark.svg';

interface Props {
  siteTitle?: string;
}

const { siteTitle = 'A Course in Mexican Spanish' } = Astro.props;
---

<header class="app-header">
  <div class="header-container">
    <div class="header-left">
      <button
        type="button"
        id="mobile-menu-toggle"
        class="header-button mobile-only"
        aria-label="Open navigation menu"
        aria-expanded="false"
        aria-controls="left-drawer"
      >
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <!-- Sidebar Toggle (for tablet/desktop) - visible >= 640px -->
      <button
        type="button"
        id="sidebar-toggle"
        class="header-button tablet-desktop-only"
        aria-label="Toggle sidebar"
        aria-expanded="true"
        aria-controls="left-sidebar"
      >
        <svg class="icon sidebar-icon-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
        </svg>
        <svg class="icon sidebar-icon-closed" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <a href="/" class="header-logo">
      <!-- Full title (tablet+) - Light mode -->
      <DesktopLogoLight class="logo-svg tablet-desktop-only light-only" />
      <!-- Full title (tablet+) - Dark mode -->
      <DesktopLogoDark class="logo-svg tablet-desktop-only dark-only" />
      
      <!-- Short title (mobile) - Light mode -->
      <MobileLogoLight class="logo-svg mobile-only light-only" />
      <!-- Short title (mobile) - Dark mode -->
      <MobileLogoDark class="logo-svg mobile-only dark-only" />
    </a>

    <!-- Right Side: ToC Toggle -->
    <div class="header-right">
      <button
        type="button"
        id="mobile-toc-toggle"
        class="header-button mobile-tablet-only"
        aria-label="Open table of contents"
        aria-expanded="false"
        aria-controls="right-drawer"
      >
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 10h16M4 14h10M4 18h7"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  /* Logo SVGs - base styles */
  .logo-svg {
    height: auto;
    width: auto;
    max-width: 100%;
  }
  
  /* Light mode (default) */
  /* Mobile: show light, hide dark */
  .mobile-only.logo-svg.light-only {
    display: block;
    height: 36px; /* Scale up mobile logo from 20px to 32px */
  }
  
  .mobile-only.logo-svg.dark-only {
    display: none;
  }
  
  /* Desktop: hide light (will show at 640px), hide dark */
  .tablet-desktop-only.logo-svg.light-only {
    display: none;
  }
  
  .tablet-desktop-only.logo-svg.dark-only {
    display: none;
  }
  
  /* Responsive: >= 640px in light mode */
  @media (min-width: 640px) {
    .mobile-only.logo-svg.light-only {
      display: none;
    }
    
    .tablet-desktop-only.logo-svg.light-only {
      display: block;
      height: 66px;
    }
  }
  
  /* Dark mode */
  /* Mobile: hide light, show dark */
  :global(.dark) .mobile-only.logo-svg.light-only {
    display: none;
  }
  
  :global(.dark) .mobile-only.logo-svg.dark-only {
    display: block;
    height: 36px; /* Scale up mobile logo from 20px to 32px */
  }
  
  /* Desktop: hide light, hide dark (will show at 640px) */
  :global(.dark) .tablet-desktop-only.logo-svg.light-only {
    display: none;
  }
  
  :global(.dark) .tablet-desktop-only.logo-svg.dark-only {
    display: none;
  }
  
  /* Responsive: >= 640px in dark mode */
  @media (min-width: 640px) {
    :global(.dark) .mobile-only.logo-svg.dark-only {
      display: none;
    }
    
    :global(.dark) .tablet-desktop-only.logo-svg.dark-only {
      display: block;
      height: 66px;
    }
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    padding: 0 1rem;
  }

  .header-left,
  .header-right {
    display: flex;
    align-items: center;
    min-width: 2.5rem;
  }

  .header-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    background-color: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text-secondary);
    transition:
      background-color var(--transition-fast),
      color var(--transition-fast);
  }

  .header-button:hover {
    background-color: var(--color-bg-tertiary);
    color: var(--color-text-primary);
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .header-logo:hover {
    text-decoration: none;
  }

  .sidebar-icon-closed {
    display: none;
  }

  :global(body.sidebar-collapsed) .sidebar-icon-open {
    display: none;
  }

  :global(body.sidebar-collapsed) .sidebar-icon-closed {
    display: block;
  }

  /* ===========================================
     Responsive visibility classes
     =========================================== */

  /* Mobile only: < 640px */
  .mobile-only {
    display: flex;
  }

  @media (min-width: 640px) {
    .mobile-only {
      display: none;
    }
  }

  /* Tablet and desktop: >= 640px */
  .tablet-desktop-only {
    display: none;
  }

  @media (min-width: 640px) {
    .tablet-desktop-only {
      display: flex;
    }
  }

  /* Mobile and tablet: < 1024px */
  .mobile-tablet-only {
    display: flex;
  }

  @media (min-width: 1024px) {
    .mobile-tablet-only {
      display: none;
    }
  }
</style>
