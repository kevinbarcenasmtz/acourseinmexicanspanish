---
/**
 * NavItem.astro
 *
 * Individual navigation item with:
 * - Active state detection
 * - Hover and focus styling
 * - Optional icon support
 */

 interface Props {
  /** Navigation link href */
  href: string;
  /** Display title */
  title: string;
  /** Whether this item is currently active */
  isActive?: boolean;
  /** Optional icon (SVG string) */
  icon?: string;
}

const { href, title, isActive = false, icon } = Astro.props;
---

<a
  href={href}
  class:list={['nav-item', { active: isActive }]}
  data-nav-item
  aria-current={isActive ? 'page' : undefined}
>
  {icon && (
    <span class="nav-item-icon" aria-hidden="true">
      <Fragment set:html={icon} />
    </span>
  )}
  <span class="nav-item-text">{title}</span>
</a>

<style>
  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-item-icon {
    flex-shrink: 0;
    width: 1rem;
    height: 1rem;
  }

  .nav-item-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .nav-item-text {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>